[Unit]
Description=Uvicorn instance to serve NAS Power Management
After=network.target

[Service]
User=root
Group=root
WorkingDirectory={INSTALL_PATH}
Environment="PATH={INSTALL_PATH}.venv/bin"
ExecStart={INSTALL_PATH}.venv/bin/uvicorn app.main:app --port 8080 --host 0.0.0.0
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
